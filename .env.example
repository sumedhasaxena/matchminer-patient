# Environment variables for the Matchminer Patient Application
# In production, create a `.env` file from this example and set secure, environment-specific values.

# Flask settings
FLASK_ENV=production
FLASK_DEBUG=False

# IMPORTANT: Generate a strong, random secret key for production.
# You can use `python -c 'import secrets; print(secrets.token_hex())'` to generate one.
SECRET_KEY="your_super_secret_and_random_key_goes_here"

# Set to 'true' if the production server has a GPU, otherwise 'false'.
USE_GPU=False